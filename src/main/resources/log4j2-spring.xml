<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="log-file">/var/log/maintenance-uptime-non-prod/uptime</Property>
    </Properties>
    <Appenders>
        <RollingRandomAccessFile fileName="${log-file}.log" filePattern="${log-file}.%d{yyyy-MM-dd}.gz" name="FILE">
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[Uptime API] %-5p [traceId=%X{dd.trace_id},spanId=%X{dd.span_id}] | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <AsyncLogger includeLocation="true" level="info" name="br.com.vw.uptime"/>

        <AsyncRoot includeLocation="true" level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </AsyncRoot>
    </Loggers>
</Configuration>